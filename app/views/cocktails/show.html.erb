<h3><%= @cocktail.name %></h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %> - <%= dose.description %> - <%= link_to 'Delete', dose_path(dose), method: :delete %>
  </li>
  <% end %>
</ul>

<%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %> - <%= link_to 'Back to the list of cocktails', cocktails_path %>