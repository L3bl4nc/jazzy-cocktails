<div class="cards">
<% @cocktails.each do |cocktail| %>
    <div class="card-category">
      <%= cocktail.name %>
      <ul>
        <% cocktail.doses.each do |dose| %>
          <li>
          <%= dose.ingredient.name %>
          </li>
        <% end %>
      </ul>
      <%= link_to 'See details', cocktail_path(cocktail) %>
    </div>
<% end %>
</div>